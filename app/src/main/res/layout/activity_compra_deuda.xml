<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompraDeudaActivity"
    android:orientation="vertical"
    android:background="@color/colorLayout">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_back"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:text="Compra Deuda"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <Button
        android:id="@+id/btnInsertRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:text="Ingresar Solicitud"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        android:background="@drawable/editbuttonred"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnTracingRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:text="Seguimiento de Solicitud"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        android:background="@drawable/editbuttonred"
        android:layout_centerHorizontal="true"/>

</LinearLayout>